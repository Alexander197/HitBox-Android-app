<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relative_layout">
        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blur_no_statistic_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="-4sp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blur_background">
                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/bag_settings_fragment"
                        android:name="com.boxproject.hitbox.BagSetting.BagSettingFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true" />
                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/previous_training_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bag_settings_fragment" />
                </RelativeLayout>
            </ScrollView>
        </eightbitlab.com.blurview.BlurView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <eightbitlab.com.blurview.BlurView
            android:id="@id/blur_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36sp">
            <TextView
                android:id="@+id/no_previous_trainings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_previous_training"
                android:padding="@dimen/text_padding"
                android:background="@color/blur_background_text"
                style="@style/TextStyleDefault"/>
        </eightbitlab.com.blurview.BlurView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blur_background">
        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_training"
            style="@style/ButtonStyle" />
    </RelativeLayout>

</RelativeLayout>