<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/card_list_elevation" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/element_padding">
            <ImageView
                android:id="@+id/image_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_statistic_graph_36dp"
                android:padding="@dimen/element_padding"/>
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_graph"
                android:text="Title"
                style="@style/TextStyleTitle"/>
            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_graph"
                android:layout_below="@+id/title_text"
                android:text="sublitle"
                style="@style/TextStyleSubtitle"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>